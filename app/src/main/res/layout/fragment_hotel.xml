<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background">

        <ImageView
            style="@style/commonView.image"
            android:background="@drawable/sj_main2"/>

        <TextView
            style="@style/commonView.text3"
            android:text="@string/title_activity_hotel"/>

        <TextView
            style="@style/commonView.text2"
            android:text="@string/title_quimbaya"/>

        <ImageView
            style="@style/commonView.image"
            android:background="@drawable/hotel_quimbaya" />

        <TextView
            style="@style/commonView.text1"
            android:text="@string/text_quimbaya"/>

        <TextView
            style="@style/commonView.text2"
            android:text="@string/title_eltesoro"/>

        <ImageView
            style="@style/commonView.image"
            android:background="@drawable/hotel_el_tesoro" />

        <TextView
            style="@style/commonView.text1"
            android:text="@string/text_eltesoro"/>

        <TextView
            style="@style/commonView.text2"
            android:text="@string/title_dharma"/>

        <ImageView
            style="@style/commonView.image"
            android:background="@drawable/hotel_dharma" />

        <TextView
            style="@style/commonView.text1"
            android:text="@string/text_dharma"/>

    </LinearLayout>

</ScrollView>
