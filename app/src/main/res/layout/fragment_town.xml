<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background">

        <ImageView
            style="@style/commonView.image"
            android:background="@drawable/sj_main3"/>

        <TextView
            style="@style/commonView.text3"
            android:text="@string/title_activity_town"/>

        <TextView
            style="@style/commonView.text1"
            android:text="@string/text_town"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                style="@style/commonView.image"
                android:background="@drawable/flag"/>

            <ImageView
                style="@style/commonView.image"
                android:background="@drawable/shield"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>