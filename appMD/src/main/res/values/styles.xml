<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="commonView" parent="@android:style/TextAppearance">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="commonView.text1">

        <item name="android:layout_margin">25dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="commonView.text2">

        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="commonView.text3">

        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonView.button">

        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonView.image">
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>
